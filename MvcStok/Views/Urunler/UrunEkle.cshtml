@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form  method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" name="URUNAD" class="form-control" maxlength="50" required="" placeholder="Lütfen Ürün Adı Girin"/>
    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" name="MARKA" class="form-control"required=""/>
    </div>
    <div>
        <label>Kategori Seçiniz</label>
         @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr,new {@class="form-control" })
        
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" name="FIYAT" class="form-control" required=""/>
    </div>
    <div>
        <label>Stok</label>
        <input type="text" name="STOK" class="form-control" required=""/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>


